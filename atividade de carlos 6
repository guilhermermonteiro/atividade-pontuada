programa
 {
	
	funcao inicio()
 {
		inteiro nota1, nota2, media
		escreva("Digite sua primeira nota:")
		leia(nota1)
		escreva("Digite sua segunda nota:")
		leia(nota2)
		media= (nota1+nota2)/2
		se
		(media<4){
		escreva("Reprovado")}
		se (media>=6){
			escreva("Aprovado")}
			se
			(media>=4 e media<6){
			escreva("Recuperacao")}
					
		}
	}

